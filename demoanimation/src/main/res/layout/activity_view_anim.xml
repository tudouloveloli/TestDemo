<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.microcool.animationdemo.ViewAnimActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/anim_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translate动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/anim_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scale动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/anim_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rotate动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/anim_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alpha动画"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/view_iamge"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />

    </LinearLayout>
</LinearLayout>
